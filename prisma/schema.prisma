generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
	id              String @id @default(auto()) @map("_id") @db.ObjectId
	phoneNo         String
	reservations    Reservation[]
}

model Temple {
	id              String @id @default(auto()) @map("_id") @db.ObjectId
	name            String
	description     String
	image           String
	coordinates     String
	country         String
	state           String
}

model Reservation {
	id              String @id @default(auto()) @map("_id") @db.ObjectId
	templeId        String
	userId          String
	reservationTime DateTime @default(now())
	date            DateTime
	timeSlot        DateTime
	tickets         Ticket[]
}

model Ticket {
	id              String @id @default(auto()) @map("_id") @db.ObjectId
}
